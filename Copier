import java.io.FileReader;
import java.io.BufferedReader;
import java.io.FileWriter;

public class Copier{

  public static void main(String args[]){
    
    BufferedReader br = null;
    FileWriter fw = null;
    
      try{

       FileReader fr = new FileReader("c:/files/myfile1.txt");
       br = new BufferedReader(fr);
       fw = new FileWriter("c:/files/myfile2.txt");

       }catch(Exception e){

       System.out.println("Error opening file!");
       e.printStackTrace();

       }
     
      try{
      
        if(br!=null && fw!=null){
        
          String line = br.readLine();
          
            while(line!=null){
            
              fw.write(line+"\n");
              line=br.readLine();
              
              }
              
              br.close();
              fw.close();
              
              }
              
          }catch(Exception e){
          
            System.out.println("Error copying file!");
            e.printStackTrace();
            
           }
           
        }
        
    }
        
     
      
